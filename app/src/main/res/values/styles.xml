<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/detail_background</item>
    </style>

    <style name="CustomImageCardViewStyle" parent="Widget.Leanback.ImageCardViewStyle">
        <item name="cardBackground">@color/detail_background</item>
        <item name="lbImageCardViewType">Title|Content|IconOnLeft</item>
    </style>

    <style name="CustomImageCardTheme" parent="Theme.Leanback">
        <item name="imageCardViewStyle">@style/CustomImageCardViewStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="logout_app_text">
        <item name="android:layout_height">45dip</item>
        <item name="android:background">@drawable/button_app_bg</item>
        <item name="android:ems">20</item>
        <item name="android:minHeight">25dip</item>
        <item name="android:textSize">15sp</item>
        <item name="android:drawablePadding">8dip</item>
        <item name="android:padding">10dip</item>
    </style>

</resources>
